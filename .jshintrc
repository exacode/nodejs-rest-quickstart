{
	// See: https://github.com/jshint/jshint/blob/master/examples/.jshintrc

	// Enforcing
	"quotmark": false,		// Quotation mark consistency (false, true, 'single', 'double')
	"trailing": true,		// true: Prohibit trailing whitespaces
	"undef": true,			// true: Require all non-global variables to be declared (prevents global leaks)
	"eqeqeq": true,			// true: Require triple equals (===) for comparison
	"camelcase": true,		// true: Identifiers must be in camelCase
	"newcap": true,			// true: Require capitalization of all constructor functions e.g. `new F()`

	// Relaxing
	"esnext": true,			// true: Allow ES.next (ES6) syntax (ex: `const`)
	"eqnull": true,			// true: Tolerate use of `== null`
	"globalstrict": true,	// Allow global "use strict" - file level (also enables 'strict').

	// Custom Globals
	"globals": {
		"__dirname": false,
		"process": false,
		"console": false,
		"exports": false,
		// Require
		"define": true,
		"require": true,
		// Mocka
		"module": false,
		"describe": false,
		"it": false,
		"before": false,
		"beforeEach": false,
		"after": false,
		"afterEach": false
	}
}